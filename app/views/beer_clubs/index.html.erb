<h1>Beer Clubs</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Founded</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <ul>
    <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td><li><%= link_to beer_club.name, beer_club %></td>
        <td><%= beer_club.founded %></td>
        <td><%= beer_club.city %></td>
        <td><%= link_to('Edit', edit_beer_club_path(beer_club), class:'btn btn-info') if current_user %></td>
        <td><%= link_to 'Destroy', beer_club, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } if current_user %></td>
      </li></tr>
    <% end %>
    </ul>
  </tbody>
</table>

<br>

<%= link_to('New Beer Club', new_beer_club_path, class:'btn btn-success') if current_user %>