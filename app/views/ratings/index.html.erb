

<div class="row">
  <h1>Ratings</h1>
  <div class="row">
    <div class="col-8 col-sm-4">
      <h3>Best beers</h3>
      <%= render 'list', items: @beers.top(3) %>
    </div>
    <div class="col-6 col-sm-4">
      <h3>Best breweries</h3>
      <%= render 'list', items: @breweries.top(3) %>
    </div>
    <div class="col-4 col-sm-4">
      <h3>Best styles</h3>
      <%= render 'list', items: @styles.top(3) %>
    </div>
  </div>
  <h3>Most active users</h3>
  <table class=table table-hover>
  <thead>
  <tr>
    <th></th>
    <th>ratings</th>
  </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.ratings.count %></td>
    </tr>
    <% end %>
    <tbody>
    </table>
  <div>

    <h3>recent ratings</h3>
    <ul>
      <% @recentfiveratings.each do |rating| %>
        <li> <%= rating %> by
        <%= link_to rating.user.username, user_path(rating.user_id) %> at
      <%= rating.updated_at %></li>
    <% end %>
    </ul>

    <p> Ratings given: <%= @ratings.count %> </p>

    <%= link_to('New Rating', new_rating_path, class:'btn btn-success') if current_user %>
  </div>
</div>